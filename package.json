{
  "name": "auth-service",
  "version": "0.1.0",
  "description": "Auth service (for sammler).",
  "keywords": [
    "auth",
    "auth0",
    "authentication",
    "microservice"
  ],
  "license": "MIT",
  "author": "Stefan Walther",
  "main": "index.js",
  "repository": "htts://github.com/sammler/auth-service",
  "scripts": {
    "d-build": "docker build -t sammlerio/auth-service .",
    "dc-up:dev": "docker-compose --f=./docker-compose.dev.yml up",
    "dc-up:devb": "docker-compose --f=./docker-compose.dev.yml up --build",
    "dc-up:devd": "docker-compose --f=./docker-compose.dev.yml up -d",
    "dc-down:dev": "docker-compose --f=./docker-compose.dev.yml down",
    "docs": "docker run --rm -v ${PWD}:/opt/verb stefanwalther/verb",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:fix": "npm run lint:src:fix && npm run lint:test:fix",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "start:watch": "nodemon ./src/index.js",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test-coverage": "export JWT_SECRET='My Secret' && istanbul cover node_modules/.bin/_mocha  --require ./test/mocha.conf.js -- -- -u exports -R spec test/**/* && codecov",
    "test:integration": "export JWT_SECRET='My Secret' && mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'",
    "precommit": "npm run lint --quiet"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.1",
    "crypto": "^1.0.1",
    "email-templates": "^3.1.7",
    "express": "^4.16.2",
    "express-initializers": "^0.0.1",
    "express-result": "*",
    "global": "^4.3.1",
    "helmet": "^3.9.0",
    "http-status-codes": "^1.1.6",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "mongoose": "^5.0.0",
    "mongoose-connection-promise": "*",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.9.0",
    "nodemailer": "^4.4.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nodemon": "^1.11.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-google-auth": "^1.0.1",
    "passport-jwt": "^3.0.1",
    "passport-linkedin": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "read-pkg-up": "^3.0.0",
    "sammler-nodelib-logger": "*",
    "serve-favicon": "^2.4.5",
    "swagger-jsdoc": "^1.9.1",
    "swagger-ui-express": "^2.0.11",
    "winster": "^0.2.7"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.11.0",
    "eslint-config-space-single": "^0.3.0",
    "codecov": "^3.0.0",
    "eslint-plugin-mocha": "^4.8.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "supertest": "^3.0.0"
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/api/config/winster-config.js"
  }
}
