{
  "name": "auth-service",
  "version": "0.1.0",
  "description": "Auth service (for sammler).",
  "keywords": [
    "auth",
    "auth0",
    "authentication",
    "microservice"
  ],
  "license": "MIT",
  "author": "Stefan Walther",
  "main": "index.js",
  "repository": "htts://github.com/sammler/auth-service",
  "scripts": {
    "d-build": "docker build -t sammler/auth-service .",
    "dc-dev-up": "docker-compose --f=./docker-compose.dev.yml up",
    "dc-dev-down": "docker-compose --f=./docker-compose.dev.yml down",
    "docs": "verb",
    "lint": "yarn run lint:src && yarn run lint:test",
    "lint:fix": "yarn run lint:src:fix && yarn run lint:test:fix",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "test": "yarn run lint && yarn test:unit && yarn test:integration",
    "test-coverage": "export JWT_SECRET='My Secret' && istanbul cover node_modules/.bin/_mocha  --require ./test/mocha.conf.js -- -- -u exports -R spec test/**/* && codecov",
    "test:integration": "export JWT_SECRET='My Secret' && mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'",
    "precommit": "yarn run lint --quiet"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.1",
    "chai": "canary",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "crypto": "^0.0.3",
    "email-templates": "^2.5.4",
    "express": "^4.14.1",
    "express-result": "stefanwalther/express-result",
    "helmet": "^3.4.0",
    "http-status-codes": "^1.1.6",
    "jsonwebtoken": "^7.3.0",
    "moment": "^2.17.1",
    "mongoose": "^4.8.3",
    "mongoose-connection-promise": "*",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.8.1",
    "nodemailer": "^3.1.3",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "sammler-nodelib-logger": "^0.2.1",
    "swagger-jsdoc": "^1.9.1",
    "swagger-ui-express": "^1.0.4",
    "winster": "^0.2.5"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "eslint": "^3.15.0",
    "eslint-config-space-single": "^0.0.4",
    "eslint-plugin-mocha": "^4.8.0",
    "husky": "^0.13.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/config/winster-config.js"
  }
}
