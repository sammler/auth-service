{
  "name": "auth-service",
  "version": "0.1.0",
  "description": "Auth service (for sammler).",
  "keywords": [
    "auth",
    "auth0",
    "authentication",
    "microservice"
  ],
  "license": "MIT",
  "author": "Stefan Walther",
  "main": "index.js",
  "repository": "htts://github.com/sammler/auth-service",
  "scripts": {
    "d-build": "docker build -t sammler/auth-service .",
    "docs": "verb",
    "lint": "yarn run lint:src && yarn run lint:test",
    "lint:fix": "yarn run lint:src:fix && yarn run lint:test:fix",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "test": "yarn run lint && yarn test:unit && yarn test:integration",
    "test:integration": "mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.1",
    "chai": "canary",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "express": "^4.14.1",
    "express-result": "^0.1.0",
    "helmet": "^3.4.0",
    "http-status-codes": "^1.1.6",
    "jsonwebtoken": "^7.3.0",
    "mongoose": "^4.8.3",
    "mongoose-connection-promise": "^0.1.3",
    "morgan": "^1.8.1",
    "sammler-nodelib-logger": "^0.2.1",
    "swagger-jsdoc": "^1.9.1",
    "swagger-ui-express": "^1.0.4",
    "winster": "^0.2.5"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-space-single": "^0.0.4",
    "eslint-plugin-mocha": "^4.8.0",
    "mocha": "^3.2.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/config/winster-config.js"
  }
}
